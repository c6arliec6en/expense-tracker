            <div class="row justify-content-between col-8">
              <div class="row">
                {{{this.category}}}
                <div class="ml-3">
                  <p>{{{this.name}}}</p>
                  <p>{{{this.date}}}</p>
                </div>
              </div>



              <div class="row align-items-center">
